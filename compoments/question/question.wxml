  <block wx:if="{{typ=='mutiple'}}">
  <view class="confirm" bindtap='tap_confirm'>
  <view class="btn{{(selected_cnt > 1) ?' green':' grayc'}}">确定</view>
  </view>
  </block>
</view>
<view class="br"></view>

<view class="memory_header">
<view class="memory_icon"></view>
<view class="memory_title">记忆技巧</view>
</view> 
<view class="line"></view>

<view class="memory_content">
<image src="/images/vip.png" mode="widthFix"></image>
</view>
<view class="br"></view>

</scroll-view>