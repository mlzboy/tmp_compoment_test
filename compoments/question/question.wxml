<!-- 引入.wxs文件 src为相对路径，module指定当前模块的名称 -->
<wxs module="f" src="./common.wxs"></wxs>

<scroll-view>
<view class="header">
  <block wx:if="{{typ=='single'}}">
  <text class="category">选择</text>
  </block>
    <block wx:if="{{typ=='mutiple'}}">
  <text class="category">多选</text>
  </block>
  <block wx:if="{{typ=='judge'}}">
  <text class="category">判断</text>
  </block>
  <text class="question">{{data[2]}}</text>
</view>
<view class="main">
<block  wx:for="{{data[1]}}" wx:for-index="idx" wx:for-item="answer">
  <view data-idx="{{idx}}" class="option{{is_selected[idx]?' grayb':''}}" bindtap='tap_select'>

    <rich-text nodes="<div class='circle white'>{{f.index_to_char(idx)}}</div>"></rich-text> 

 
    <rich-text nodes="{{f.is_highlight(answer)}}" class="answer green2"></rich-text>


   
    
  </view>
</block>
